<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E1BEE7" /> <!-- Morado claro al presionar -->
            <stroke android:width="2dp" android:color="#9C27B0" /> <!-- Borde morado -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
            <stroke android:width="2dp" android:color="#9C27B0" /> <!-- Borde morado -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>