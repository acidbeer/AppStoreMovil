<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F3E8"
    tools:context=".ResetPasswordActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvResetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset_password"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Campo Email -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvResetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp" />

    <!-- Nuevo Password -->
    <EditText
        android:id="@+id/etNewPwd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="new_password"
        android:inputType="textPassword"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Confirmar Password -->
    <EditText
        android:id="@+id/etNewPwd2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="confirm_password"
        android:inputType="textPassword"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etNewPwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Botón Reset -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="reset_password"
        android:textColor="#FFFFFF"
        android:background="#2C2C2C"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etNewPwd2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>